<div class="row">
    {{#each dirlist}}
    <div class="col-sm-4">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Special title treatment</h5>
                <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                <a href="/showFiles/:{{this}}" class="btn btn-primary">{{this}}</a>
            </div>
        </div>
    </div>
    {{/each}}
</div>